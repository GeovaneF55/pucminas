<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnWidth="90dp"
    android:numColumns="auto_fit"
    android:verticalSpacing="10dp"
    android:horizontalSpacing="10dp"
    android:stretchMode="columnWidth"
    android:gravity="center">

    <TextView
        android:id="@+id/txt_Evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/evento"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@android:color/darker_gray"/>

    <TextView
    android:id="@+id/txt_nomeEvento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="2"
    android:layout_column="0"
    android:text="@string/nome_evento"/>

    <EditText
        android:id="@+id/edt_nomeEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:inputType="textAutoComplete"/>

    <TextView
        android:id="@+id/txt_dataInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="4"
        android:layout_column="0"
        android:text="@string/data_inicio"/>

    <EditText
        android:id="@+id/edt_dataInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:layout_row="5"
        android:layout_column="0"/>

    <TextView
        android:id="@+id/txt_dataFim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="0"
        android:text="@string/data_fim"/>

    <EditText
        android:id="@+id/edt_dataFim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:layout_row="7"
        android:layout_column="0"/>

    <Space
        android:layout_width="1dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txt_Organizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="8"
        android:layout_column="0"
        android:text="@string/organizador"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_row="9"
        android:layout_column="0"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/txt_nomeOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="10"
        android:layout_column="0"
        android:text="@string/nome_organizador"/>

    <EditText
        android:id="@+id/edt_nomeOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="11"
        android:layout_column="0"
        android:inputType="text"/>

    <TextView
        android:id="@+id/txt_emailOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="12"
        android:layout_column="0"
        android:text="@string/email_organizador"/>

    <EditText
        android:id="@+id/edt_emailOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="13"
        android:layout_column="0"
        android:inputType="textEmailAddress"/>

    <TextView
        android:id="@+id/txt_telefoneOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="14"
        android:layout_column="0"
        android:text="@string/telefone_organizador"/>

    <EditText
        android:id="@+id/edt_telefoneOrganizador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="15"
        android:layout_column="0"
        android:inputType="phone"/>

    <Button
        android:id="@+id/btn_criarEvento"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="16"
        android:layout_gravity="right"
        android:layout_column="0"
        android:text="@string/criar_evento"/>

</GridLayout>