<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/expandedListItemID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_margin_default"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="@dimen/layout_padding_default"
        android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textColor="@color/list_item_title"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/expandedListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/layout_margin_default"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="@dimen/layout_padding_default"
        android:paddingRight="?android:attr/expandableListPreferredChildPaddingLeft"
        android:textColor="@color/list_item_title" />
</LinearLayout>